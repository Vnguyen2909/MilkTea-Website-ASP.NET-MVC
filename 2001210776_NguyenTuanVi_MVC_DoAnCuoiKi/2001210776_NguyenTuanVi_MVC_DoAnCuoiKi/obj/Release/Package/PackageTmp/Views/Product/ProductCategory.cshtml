
@model List<_2001210776_NguyenTuanVi_MVC_DoAnCuoiKi.Models.Product>

@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg">
    <img src="~/img/banner/Banner_1.jpg" alt="Alternate Text" />
</section>
<!-- Breadcrumb Section End -->
<section class="product">
    <div class="container">
        <div class="row">
            <div class="col-lg3 col-md-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All departments</span>
                    </div>
                    <ul>
                        @foreach (var item in ViewBag.Category)
                        {
                            <li>
                                <a href="@Url.Action("ProductCategory", "Product", new { id= item.ID_Category})">@item.Name_Category</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 col-md-8">
                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-6 col-md-5">
                            <div class="filter__sort">
                                <span>Sort By</span>
                                <select>
                                    <option value="0">
                                        <a href="/ShopProduct/Index?SortColumn=Name_Product">Sắp xếp theo tên</a>
                                        @*@if(ViewBag.SortColumn == "Name_Product")
                                    {

                                    }*@
                                    </option>
                                    <option value="0">Sắp xếp theo giá</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-3">
                            <div class="filter__option">
                                <span class="icon_grid-2x2"></span>
                                <span class="icon_ul"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="@Url.Content("/img/product/"+item.Images)" style="height:350px">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                        <li>
                                            <a href="/Product/Detail/@item.ID_Product"><i class="fa fa-shopping-cart"></i></a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="#">@item.Name_Product</a></h6>
                                    <h5>@item.Price</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

