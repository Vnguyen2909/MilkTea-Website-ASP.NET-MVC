@model IEnumerable<_2001210776_NguyenTuanVi_MVC_DoAnCuoiKi.Models.ShoppingCartItems>

@{
    ViewBag.Title = "Partial_Item_Cart";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr class="text-center">
        <th>STT</th>
        <th>Ảnh sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Giá sản phẩm</th>
        <th>Số lượng</th>
        <th>Thành tiền</th>
        <th></th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 0;
        var tongtien = decimal.Zero;
        foreach (var item in Model)
        {
            tongtien += item.TotalPrice;
            <tr class="text-center" id="trow_@item.ID_Product">
                <td>@(i + 1)</td>
                <td><img src="~/img/product/@item.Images" width="100" /></td>
                <td>@item.Name_Product</td>
                <td>@item.Price.ToString("N0") VNĐ</td>
                <td><input type="number" value="@item.Quantity" id="Quantity_@item.ID_Product" style="width:60px" /></td>
                <td>@item.TotalPrice.ToString("N0") VNĐ</td>
                <td>
                    <a href="#" data-id="@item.ID_Product" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                    <a href="#" data-id="@item.ID_Product" class="btn btn-sm btn-success btnUpdate">Cập nhật</a>
                </td>
            </tr>
            i++;
        }
        <tr class="text-center">
            <td colspan="5" style="font-weight: 800">Tổng:</td>
            <td>@tongtien.ToString("N0") VNĐ</td>
            <td></td>
        </tr>
    }
    else
    {
        <tr>
            <td style="font-weight: 800">Không có sản phẩm trong giỏ hàng!!!</td>
        </tr>
    }
</table>
