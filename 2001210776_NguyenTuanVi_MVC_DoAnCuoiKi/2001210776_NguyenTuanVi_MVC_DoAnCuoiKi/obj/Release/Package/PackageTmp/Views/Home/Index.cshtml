
@model List<_2001210776_NguyenTuanVi_MVC_DoAnCuoiKi.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="col-12 p-3" style="margin-left:60px">
            <div class="row">
                <div class="hero__text col-6 align-items-center align-self-center">
                    <span>MILK TEA</span>
                    <h2>Ngon ngọt vị sữa <br />100% Lá trà tự nhiên</h2>
                    <p>Mua 2 tặng 1 đối với khách hàng thành viên</p>
                    <a href="~/Product/Index" class="primary-btn">MUA NGAY</a>
                </div>
                <div class="col-6 align-items-center align-self-center text-center">
                    <img src="~/img/product/TsOlong.jpg" alt="Alternate Text" style="width: 80%" />
                </div>

            </div>

        </div>
    </div>
</section>

<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="col-lg-12 col-md-7">
            <div class="product__discount">
                <div class="section-title product__discount__title">
                    <h2>Sản phẩm nổi bật</h2>
                </div>
                <div class="row">
                    <div class="product__discount__slider owl-carousel">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg="@Url.Content("../img/product/"+item.Images)" style="height:350px">
                                        <ul class="product__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li>
                                                <a href="/Product/Detail/@item.ID_Product"><i class="fa fa-shopping-cart"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6><a href="#">@item.Name_Product</a></h6>
                                        <h5>@item.Price</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
