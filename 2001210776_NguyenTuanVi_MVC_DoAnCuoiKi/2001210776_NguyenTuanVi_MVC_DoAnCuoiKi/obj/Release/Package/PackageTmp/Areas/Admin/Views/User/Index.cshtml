@model List<_2001210776_NguyenTuanVi_MVC_DoAnCuoiKi.Identity.AppUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<h2 style="text-align: center; margin-bottom: 10px">USER</h2>
<button class="btn btn-secondary" style="margin: 0 auto; width: 120px;">
    @Html.ActionLink("Create New", "AddUser", null, new { style = "color: white;text-decoration: none" })
</button>
<div class="card mb-4" style="margin: 10px; padding:0px 10px">
    <div class="card-header" style="margin: 10px 0px">
        <i class="fas fa-table me-1"></i>
        DANH SÁCH TÀI KHOẢN KHÁCH HÀNG
    </div>
    <!--End Search-->

    <div class="card-body">
        <table class="table ">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(row => item.FullName)</td>
                        <td>@Html.DisplayFor(row => item.UserName)</td>
                        <td>@Html.DisplayFor(row => item.Email)</td>
                        <td>@Html.DisplayFor(row => item.PhoneNumber)</td>
                        <td>@Html.DisplayFor(row => item.Address)</td>
                        <td>
                            @Html.ActionLink("Edit", "EditUser", new { id = item.Id, Controller = "user", area = "Admin" })
                            @Html.ActionLink("Delete", "deleteuser", new { id = item.Id, Controller = "user", area = "Admin" })
                        </td>
                    </tr>
                }
            </tbody>      
        </table>
    </div>
</div>